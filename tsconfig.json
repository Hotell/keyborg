{
  "compilerOptions": {
    "declaration": true,
    "noResolve": false,
    "module": "ES2015",
    "target": "ES2019",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "lib": ["DOM", "ESNext"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}
